{% extends 'MunicipalesBundle:theme:layout.html.twig' %}

{% block title %}{{ 'candidate.step_verify.html_title'|trans }}{% endblock %}

{% from 'MunicipalesBundle:macros:steps.html.twig' import steps_widget_candidate %}
{% form_theme form 'MunicipalesBundle:theme:forms.html.twig' %}

{% block content %}
 <section class="section-2">
      <div class="container marketing">

        <div class="headline">
          <h2>{{ 'home.step_h2'|trans }} 1</h2>
        </div><h3 class="featurette-headin"> <i>{{ 'candidate.step_verify.h1_title'|trans }}</i>
        </h3>
        
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider2">
        <!--    division -->
        
        {{ form_start(form, { 'attr': {'class': 'form_settings'}}) }}
        
        <div class="row featurette2">
          <div class="widget-box">
            

            <div class="widget-body">
              <div class="widget-main">
              
              	
              	
                <div id="fuelux-wizard-container">
                  {{ steps_widget_candidate(2, address) }}
                  
				  <hr>

                  <div class="step-content pos-rel">
                  
				  {% if not form.vars.valid and form.vars.errors|length > 0 %}
                  <div class="alert alert-danger">
                          <button data-dismiss="alert" class="close" type="button">
                            <i class="mine-icon fa fa-times"></i>
                          </button>
                          {{ form_errors(form) }}
                  </div>
                  {% endif %}
                          
                    <div data-step="1" class="step-pane active row">
                      <h2 class="lighter block greenl col-xs-10 col-sm-offset-1">{{ 'candidate.step_verify.h1_title'|trans }}</h2><div class="col-sm-offset-3 col-md-6 well">

					  <p class="lead2 phone_verify">
	
						{{ 'candidate.verify_msg'|trans({'%sms_inbound_number%': sms_inbound_number}) }}
						<br /><br />
						{{ 'candidate.verify_extra'|trans }}
					 </p>
			          
			        </div>

                      
                    </div>
                  </div>
                </div>

                <hr>
                <div class="wizard-actions">

				  <button class="btn btn-prev" onclick="location.href='{{ path('candidate_step1', {'address' : address }) }}'; return false;">
                    <i class="mine-icon fa fa-arrow-left"></i>
                    {{ 'candidate.step_verify.previous'|trans }}
                  </button>
                  
                  {{ form_widget(form.continue, { 'label': 'candidate.step_verify.continue'|trans|raw, 'attr' : { 'class' : 'submit btn btn-success btn-next'} }) }}

                </div>
              </div>
              
              
             </div> <!-- /.widget-main --> 
            
            </div><!-- /.widget-body --> 
        </div>

        {{ form_rest(form) }}
			
		{{ form_end(form) }}
			  
        <!--    division -->

        <!-- /END THE FEATURETTES --> 
        </div>
</section>
{% endblock %}