{% extends 'MunicipalesBundle:theme:layout.html.twig' %}

{% block title %}Panel Admin{% endblock %}

{% block appjsinline %}
    <script>

    $(document).ready(function() 
    {

    });
    
	</script>
{% endblock %}

{% block content %}
<section class="section-2">
      <div class="container marketing">

        <div class="headline">
          <h2>Panel Admin</h2>
        </div>
        
        <h3 class="featurette-headin"> <i>Hola {{ admin.name }} {{ admin.lastname }}</i>, <a title="Salir" href="{{ path('admin_logout') }}">Salir</a></h3>
        
        <!-- START THE FEATURETTES -->
        <!--    division -->

        <div class="row featurette2">
          <div class="widget-box">
            

            <div class="widget-body">
              <div class="widget-main">
              
                <div id="fuelux-wizard-container">

                  <div class="step-content pos-rel">

                          
                    <div data-step="1" class="step-pane active row">
                      <h2 class="lighter block greenl col-xs-10 col-sm-offset-1">Panel Admin</h2>
                      
                      <div class="col-sm-offset-1 col-md-10 well">
							En este panel puedes gestionar la candidatura ciudadana
                      </div>
                      
                      <div class="row">
                      
                      	<div class="col-sm-offset-1 col-md-10">
                      	
                      	    {% if needs_phone_verification %}              			
	                  			<div class="help-block col-xs-12 col-sm-10 col-sm-offset-1 inline">
	                  				<div class="alert alert-warning">Aun no has validado tu número de móvil <b>{{ admin.phone }}</b>. Es necesario validar tu móvil para continuar con cualquier acción.
	                  				<br /><br />
	                  				{{ 'town.verify_msg'|trans({'%sms_inbound_number%': sms_inbound_number}) }}
	                  				</div>
	                  			</div>
	                  			<br />
	                  			<br />
	                  		{% else %}
	                  			<div class="help-block col-xs-12 col-sm-10 col-sm-offset-1 inline">
	                  				<div class="alert alert-success">
	                  					<i class="fa fa-check"></i> Tu número de móvil <b>{{ admin.phone }}</b> esta verificado correctamente.
	                  				</div>
	                  			</div>
	                  			<br />
	                  			<br />
                  			{% endif %}
                  			
							<button class="btn btn-default btn-lg" style="height:40px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('panel_admin_modify_personal_data') }}'; return false;">
			                    <i class="mine-icon fa fa-pencil fa-fw"></i>
			                    Modificar datos personales
			                </button>
                  			
                  			<br />
                  			<br />
                  			
                  			{% if not needs_phone_verification %}
	                  			<button class="btn btn-prev" style="height:40px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('municipales_candidacy_step2') }}'; return false;">
				                    <i class="mine-icon fa fa-upload"></i>
				                    Subir documentos
				                </button>
				                
				                <br />
	                  			<br />
	                  			
				                <button class="btn btn-prev" style="height:70px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('municipales_candidacy_step3') }}'; return false;">
				                    <i class="mine-icon fa fa-calendar"></i>
				                    Cambiar/establecer los plazos <br />presentación de candidaturas
				                </button>
	                  			
	                  			<br />
	                  			<br />
	                  			
	                  			<button class="btn btn-prev" style="height:70px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('municipales_candidacy_step4') }}'; return false;">
				                    <i class="mine-icon fa fa-calendar-o"></i>
				                    Cambiar/establecer <br />dirección de internet
				                </button>
	                  			
	                  			<br />
	                  			<br />
	                  			
	                  			{% if not admin.address is empty %}
		                  			<button class="btn btn-prev" style="height:70px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('candidate_step1', {'address' : admin.address }) }}'; return false;">
					                    <i class="mine-icon fa-book fa"></i>
					                    Ver enlace <br />de alta de candidatos/as
					                </button>
		                  			
		                  			<br />
		                  			<br />
	                  			{% endif %}
	                  			
	                  			<button class="btn btn-prev" style="height:40px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('municipales_candidacy_step6') }}'; return false;">
				                    <i class="mine-icon fa fa-check-square"></i>
				                    Validar candidatos/as
				                </button>
	                  			
	                  			<br />
	                  			<br />
	                  			
	                  			<button class="btn btn-prev" style="height:70px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('municipales_candidacy_step7') }}'; return false;">
				                    <i class="mine-icon fa fa-pencil fa-fw"></i>
				                    Establecer número de días <br />de la votación (plazo de votación)
				                </button>
	                  			
	                  			<br />
	                  			<br />
	                  			
	                  			<button class="btn btn-prev" style="height:70px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('municipales_candidacy_step8') }}#'; return false;">
				                    <i class="mine-icon fa fa-key fa-fw"></i>
				                    Ver resultados internos <br />de la votación
				                </button>
	                  			
	                  			<br />
	                  			<br />
	                  			{% if not admin.address is empty %}
	                  			<button class="btn btn-prev" style="height:70px;padding: 0 15px;font-size:18px" onclick="location.href='{{ path('town_results', {'address' : admin.address }) }}'; return false;">
				                    <i class="mine-icon fa fa-eye"></i>
				                    Ver enlace de resultados públicos<br /> de la votación
				                </button>
				                {% endif %}
			                {% endif %}
						</div>
			          
			          </div>

                      
                    </div>


                    
                  </div>
                </div>

              </div>
              
              
              <!-- /.widget-main --> </div>
            <!-- /.widget-body --> </div>
        </div>
			  
        <!--    division -->

        <!-- /END THE FEATURETTES --> </div>
        
</section>
{% endblock %}