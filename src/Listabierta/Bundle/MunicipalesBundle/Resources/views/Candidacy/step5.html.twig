{% extends 'MunicipalesBundle:theme:layout.html.twig' %}

{% block title %}{{ 'candidacy.step5.html_title'|trans }}{% endblock %}

{% form_theme form 'MunicipalesBundle:theme:forms.html.twig' %}
{% from 'MunicipalesBundle:macros:steps.html.twig' import steps_widget %}

{% block content %}
<section class="section-2">
	<div class="container marketing">

        <div class="headline">
          <h2>{{ 'home.step_h2'|trans }} 5</h2>
        </div>
        
        <h3 class="featurette-headin"> <i>{{ 'candidacy.step5.h1_title'|trans }}</i></h3>
        
        <!-- START THE FEATURETTES -->

        <!--    division -->
        
        {{ form_start(form, { 'attr': {'class': 'form_settings'}}) }}
        
        <div class="row featurette2">
          <div class="widget-box">
            

            <div class="widget-body">
              <div class="widget-main">
              
              	
              	
                <div id="fuelux-wizard-container">
                  	{{ steps_widget(5) }}
                  
				  	<hr>

                	<div class="step-content pos-rel container-fluid">
                  
	                  <div class="row">
				        	<h2 class="col-md-8 col-sm-offset-2 text-center">{{ 'candidacy.step5.register_link'|trans }}</h2>
				      </div>
			            
					  {% if not form.vars.valid and form.vars.errors|length > 0 %}
	                  <div class="alert alert-danger">
	                          <button data-dismiss="alert" class="close" type="button">
	                            <i class="mine-icon fa fa-times"></i>
	                          </button>
	                          {{ form_errors(form) }}
	                  </div>
	                  {% endif %}
                          
                      <div class="row">
			              <div class="col-md-offset-1 col-md-10 well">
			
			                <p class="lead2 text-center">
                      			{{ 'candidacy.step5.explanation_link'|trans }}:
							</p>
			              </div>
			          </div>

			          
			           <div data-step="1" class="step-pane active col-xs-12">
			
			              <div class="col-md-offset-1 col-md-8 form-horizont">
			                <div class="widget-box2">
			
			                  <div class="widget-body">
			                    <div class="widget-main">
			                      
			
			                  
			                            <div class="form-group text-center">
			                              <a target="_blank" style="font-size:24px" href="http://municipales2015.listabierta.org/{{ address_slug }}/altacandidaturas" 
			                              title="Alta candidaturas {{ address_slug }}">http://municipales2015.listabierta.org/{{ address_slug }}/altacandidaturas</a>
		
			                            </div>
			                            
			                            <div class="row">
											<div class="col-md-offset-3 col-md-8">
									            <p class="lead2 text-center">
									                {{ 'candidacy.step5.send_link'|trans }}
									            </p>
									        </div>
										</div>
										
										<div class="help-block col-xs-12 col-sm-12 col-sm-offset-1 inline">
										 	<div class="alert alert-warning">{{ 'candidacy.step5.next_step_explanation'|trans }}</div>
										</div>
			
			                    </div>
			                  </div>
			                </div>
			              </div>
			            </div>
                      
                    </div>
                    
                    
                    
                  </div>
                  
                  <hr>
	                <div class="wizard-actions">
	
					  <button class="btn btn-prev" onclick="location.href='{{ path('municipales_candidacy_step4') }}'; return false;">
	                    <i class="mine-icon fa fa-arrow-left"></i>
	                    {{ 'candidacy.step5.previous'|trans }}
	                  </button>
	                  
	                  {{ form_widget(form.continue, { 'label': 'candidacy.step5.continue'|trans|raw, 'attr' : { 'class' : 'submit btn btn-success btn-next'} }) }}
	
	                </div>
                
                </div>

                
              </div>
              
              
              <!-- /.widget-main --> </div>
            <!-- /.widget-body --> </div>
        </div>

        {{ form_rest(form) }}
			
		{{ form_end(form) }}
			  
        <!--    division -->

        <!-- /END THE FEATURETTES --> 
        </div>
</section>
{% endblock %}